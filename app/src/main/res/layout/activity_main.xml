<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#232a37">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/buttonlayout"
        android:layout_marginBottom="70dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:focusable="true"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:cursorVisible="true"
            android:verticalScrollbarPosition="right"
            android:background="#232a37"
            android:padding="10dp"
            android:textAlignment="viewEnd"
            android:textSize="50sp"
            android:id="@+id/inputnumber">
        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="30sp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:background="#232a37"
            android:id="@+id/result"
            android:clickable="false"
            android:textAlignment="viewEnd"
            android:padding="10dp">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/buttonlayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="AC"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#B25252"
                android:gravity="center"
                android:backgroundTint="#292e37"
                android:id="@+id/clear">

            </android.widget.Button>

            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="7"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:backgroundTint="#292e37"
                android:id="@+id/button7">

            </android.widget.Button>

            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="4"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:backgroundTint="#292e37"
                android:id="@+id/button4">

            </android.widget.Button>

            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:backgroundTint="#292e37"
                android:id="@+id/button1">

            </android.widget.Button>

            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="00"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:backgroundTint="#292e37"
                android:id="@+id/button00">

            </android.widget.Button>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="%"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#B25252"
                android:gravity="center"
                android:backgroundTint="#292e37"
                android:id="@+id/buttonpercent">

            </android.widget.Button>

            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="8"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:backgroundTint="#292e37"
                android:id="@+id/button8">

            </android.widget.Button>

            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="5"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:backgroundTint="#292e37"
                android:id="@+id/button5">

            </android.widget.Button>

            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="2"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:backgroundTint="#292e37"
                android:id="@+id/button2">

            </android.widget.Button>

            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="0"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:backgroundTint="#292e37"
                android:id="@+id/button0">

            </android.widget.Button>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:drawableTop="@drawable/baseline_backspace_24"
                android:paddingTop="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:backgroundTint="#292e37"
                android:id="@+id/buttonbackspace"
                android:drawableTint="#B25252">

            </android.widget.Button>

            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="9"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:backgroundTint="#292e37"
                android:id="@+id/button9">

            </android.widget.Button>

            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="6"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:backgroundTint="#292e37"
                android:id="@+id/button6">

            </android.widget.Button>

            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="3"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:backgroundTint="#292e37"
                android:id="@+id/button3">

            </android.widget.Button>

            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="."
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:backgroundTint="#292e37"
                android:id="@+id/butondot">

            </android.widget.Button>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="÷"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:backgroundTint="#B25252"
                android:id="@+id/buttondivide">

            </android.widget.Button>

            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="×"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:backgroundTint="#B25252"
                android:id="@+id/buttonmultiply">

            </android.widget.Button>

            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="-"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:backgroundTint="#B25252"
                android:id="@+id/buttonminus">

            </android.widget.Button>

            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="+"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:backgroundTint="#B25252"
                android:id="@+id/buttonadd">

            </android.widget.Button>

            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="="
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:backgroundTint="#B25252"
                android:id="@+id/buttonequal">

            </android.widget.Button>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>



